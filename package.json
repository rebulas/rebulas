{
  "name": "rebulas",
  "version": "0.0.1",
  "description": "Rebulas - Productivity for the technically minded",
  "scripts": {
    "watch": "export NODE_PATH=./js; watchify main.js -o bundle.js -dv",
    "server": "node server.js",
    "start": "npm-run-all -p -r watch server",
    "dist": "mkdir -p dist && cp index.html bundle.js main.css dist/ && cp -r style oauth dist/",
    "browserify": "export NODE_PATH=./js; browserify -d main.js > bundle.js",
    "build": "npm run browserify && npm run dist && tar -czvf dist-$npm_package_version.tgz dist",
    "test": "export NODE_PATH=./js; nodeunit"
  },
  "devDependencies": {
    "filereader": "^0.10.3",
    "node-localstorage": "^1.3.0",
    "nodeunit": "^0.11.1"
  },
  "dependencies": {
    "browserify": "^5.10.0",
    "dropbox": "^2.5.4",
    "elasticlunr": "github:weixsong/elasticlunr.js#master",
    "localforage": "^1.5.0",
    "markdown-it": "^8.3.1",
    "marked": "^0.3.6",
    "mock-require": "^2.0.2",
    "npm-run-all": "^4.0.2",
    "watchify": "^3.9.0"
  }
}
